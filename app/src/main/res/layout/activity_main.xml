<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FED8B1"
    >

    <TextView
        android:id="@+id/StaticWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome"
        android:textColor="#000"
        android:textSize="35dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/StaticTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/StaticWelcome"
        android:text="to"
        android:textColor="#000"
        android:textSize="35dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/StaticAsana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StaticTo"
        android:layout_centerHorizontal="true"
        android:text="CorrectAsana.ai"
        android:textColor="#000"
        android:textSize="35dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/StartWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_below="@+id/StaticWelcome"
        android:layout_marginTop="200dp"
        android:text="Guided Workout"
        android:background="@drawable/custom_rounded_corners"
    />

    <Button
        android:id="@+id/DummySelfChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/StartWorkout"
        android:layout_alignRight="@+id/StartWorkout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/StartWorkout"
        android:layout_marginTop="120dp"
        android:textSize="25dp"
        android:background="@drawable/custom_rounded_corners"
        android:text="Self-driven"
        />

</RelativeLayout>